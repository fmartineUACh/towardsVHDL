FUNCTION ss_def (clk, reset, count) RETURNS (MACHINE ss_out);
FUNCTION ss_use (MACHINE ss_in) RETURNS (out);


SUBDESIGN top2 
(
	sys_clk, /reset, hold	: INPUT;
	sync_out					: OUTPUT;
)
VARIABLE
	sm_macro					: ss_def;
	sync						: ss_use;
BEGIN
   sm_macro.(clk, reset, count) = (sys_clk, !/reset, !hold);
   sync.ss_in = sm_macro.ss_out;
   sync_out = sync.out;
END;
